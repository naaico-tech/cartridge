# Cartridge Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
CARTRIDGE_NAME=Cartridge
CARTRIDGE_VERSION=0.1.0
CARTRIDGE_DEBUG=false
CARTRIDGE_ENVIRONMENT=development
CARTRIDGE_HOST=0.0.0.0
CARTRIDGE_PORT=8000

# Database Configuration
CARTRIDGE_DB_URL=postgresql://cartridge:cartridge@localhost:5432/cartridge
CARTRIDGE_DB_POOL_SIZE=10
CARTRIDGE_DB_MAX_OVERFLOW=20
CARTRIDGE_DB_ECHO=false

# Redis Configuration
CARTRIDGE_REDIS_URL=redis://localhost:6379/0
CARTRIDGE_REDIS_MAX_CONNECTIONS=20

# AI Configuration
CARTRIDGE_AI_OPENAI_API_KEY=your_openai_api_key_here
CARTRIDGE_AI_ANTHROPIC_API_KEY=your_anthropic_api_key_here
CARTRIDGE_AI_GEMINI_API_KEY=your_gemini_api_key_here
CARTRIDGE_AI_DEFAULT_MODEL=gpt-4
CARTRIDGE_AI_MAX_TOKENS=4000
CARTRIDGE_AI_TEMPERATURE=0.1

# Security Configuration
CARTRIDGE_SECURITY_SECRET_KEY=your-secret-key-change-this-in-production
CARTRIDGE_SECURITY_ALGORITHM=HS256
CARTRIDGE_SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload Settings
CARTRIDGE_MAX_FILE_SIZE=104857600  # 100MB
CARTRIDGE_UPLOAD_DIR=./uploads
CARTRIDGE_OUTPUT_DIR=./output
CARTRIDGE_TEMP_DIR=./temp

# Logging Configuration
CARTRIDGE_LOG_LEVEL=INFO
CARTRIDGE_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
CARTRIDGE_LOG_FILE=./logs/cartridge.log
CARTRIDGE_LOG_MAX_FILE_SIZE=10485760  # 10MB
CARTRIDGE_LOG_BACKUP_COUNT=5